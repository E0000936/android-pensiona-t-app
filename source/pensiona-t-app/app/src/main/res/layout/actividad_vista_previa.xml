<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <WebView
        android:id="@+id/webview_vista_previa_documento"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/img_vista_previa_atras"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/digitalizacion_atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_flecha_atras_blanca" />

    <ImageButton
        android:id="@+id/img_vista_previa_eliminar"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/digitalizacion_eliminar"
        app:layout_constraintStart_toStartOf="@+id/img_vista_previa_atras"
        app:layout_constraintTop_toBottomOf="@+id/img_vista_previa_atras"
        app:srcCompat="@drawable/ic_eliminar" />
</androidx.constraintlayout.widget.ConstraintLayout>